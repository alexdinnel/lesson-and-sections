<h1>Edit Section</h1>

<% if @section.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @section.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/sections/<%= @section.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="section_number">Section No.</label>
  <input id="section_number" name="updated_section[number]" type="text" value="<%= @section.number %>">
  <label for="section_name">Name</label>
  <input id="section_name" name="updated_section[name]" type="text" value="<%= @section.name %>">

  <button>Update Section</button>
</form>

<p><a href="/sections/<%= @section.id %>/edit"
      data-confirm="You sure?"
      data-method="delete"
      rel="nofollow">Delete</a></p>


<p><a href="/sections/<%= @section.id %>">Go back to the show section page</a>
