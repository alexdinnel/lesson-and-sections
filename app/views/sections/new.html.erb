<h1>New Section</h1>

<% if @section.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @section.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/sections/<%= @section.id %>" method="post">
  <label for="section_number">Section No.</label>
  <input id="section_number" name="new_section[number]" type="text" value="<%= @section.number %>">
  <label for="section_name">Name</label>
  <input id="section_name" name="new_section[name]" type="text" value="<%= @section.name %>">
  <button>Create Section</button>
</form>

<p><a href="/">Go back to the main section page</a>

